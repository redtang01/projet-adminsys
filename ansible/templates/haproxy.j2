backend backends1
    mode http
    balance roundrobin
    {% for backend in groups['backend_1'] -%}
      server backend{{ loop.index }} {{backend}}:80 check
    {% endfor -%}
global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon
    maxconn 1000
    tune.ssl.default-dh-param 2048

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 10000
    timeout server 10000

frontend frontend1
    bind *:80
    default_backend backends1

listen stats
    bind *:8080
    stats enable
    stats uri /stats
    stats realm Haproxy\ Statistics

backend backends1
    mode http
    balance roundrobin
    {% for backend in groups['backend_1'] -%}
      server backend{{ loop.index }} {{backend}}:80 check
    {% endfor -%}
